<%- include("partials/header");-%>

<div class="container mt-5">
  <div class="row">
    <h1 class="col col-sm-6">Your Contributions</h1>
  </div>
  <%if(data.length === 0){%>
  <div>
    <div
      style="min-height: 20vh"
      class="
        container
        card
        text-center
        align-center
        justify-content-center
        shadow
      "
    >
      <p>Oops! You haven't contributed yet :(</p>
    </div>
    <a href="/users/contribute" class="btn btn-light mt-2">Contribute Now</a>
  </div>
  <%}else{%>
  <div class="mb-5">
    <a href="/users/contribute" class="btn btn-primary">Contribute More</a>
  </div>
  <div class="row">
    <% var i = 0 %> <% data.forEach(item=>{ %>
    <div class="col col-sm-4 m-auto mb-2 shadow-lg">
      <div class="card my-2" style="width: auto">
        <img
          class="card-img-top"
          style="height: 50vh"
          src="<%= item.cloudinary_url%>"
          alt="Card image cap"
        />
        <div class="card-body">
          <% var date = item.createdAt.getDate() %> <% var
          month=item.createdAt.getMonth() %> <% var year =
          item.createdAt.getFullYear() %>
          <p>Date Created: <%= date%>/<%= month%>/<%= year%></p>
          <% if(!item.visited){ %>
          <button class="btn btn-info">Not Seen</button>
          <% }else{%> <% if(item.selected){ %>
          <button class="btn btn-success">Selected</button>
          <% }else{%>
          <button class="btn btn-danger">Not Selected</button>
          <% } %> <%}%>
        </div>
        <ul class="list-group list-group-flush text-center">
          <li class="list-group-item"><%= item.captions[0] %></li>
          <li class="list-group-item"><%= item.captions[1] %></li>
          <li class="list-group-item"><%= item.captions[2] %></li>
          <li class="list-group-item"><%= item.captions[3] %></li>
          <li class="list-group-item"><%= item.captions[4] %></li>
        </ul>
      </div>
    </div>
    <%i = i+1 %> <% if(i%3 ==0) {%>
    <div class="w-100"></div>
    <% } %> <% }) }%>
  </div>
</div>

<%- include("partials/footer"); -%>
