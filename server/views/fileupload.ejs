<%- include("partials/header");-%>
<div class="container">
  <div class="row mt-4 pb-4">
    <div class="col col-md-6 m-auto text-center">
      <h1>
        <i class="fas fa-image pr-2"></i>
        Image Captioning Model
        <i class="fas fa-list-alt pl-2"></i>
      </h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body shadow">
        <form
          action="/search/model-1"
          method="post"
          enctype="multipart/form-data"
          class="form-group mt-4"
        >
          <div class="form-group">
            <label for="image" class="font-weight-bold"
              >Choose Image to Caption
              <hr />
            </label>
            <input
              type="file"
              class="form-control-file"
              id="image"
              name="image"
              required
            />
            <small class="form-text text-muted"
              >Image Format: jpeg/jpg/png only</small
            >
          </div>

          <button type="submit" class="btn bg-primary text-white text-center">
            Predict
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
